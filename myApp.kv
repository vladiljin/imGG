BoxLayoutMain:

<BoxLayoutMain>:
    orientation: "vertical"

    BoxLayout:
        size_hint: 1, 0.6
        OverlayLayout:
            size_hint: 1, 1

            Image:
                source: 'data/image.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1

            Button:
                size_hint: None, None
                size: "100dp", "50dp"
                pos_hint: {'x': 0.01, 'top': 0.99}
                text: 'Button'



    BoxLayout:
        size_hint: 1, 0.4
        ScrollView:
            size_hint: 1, 1
            BoxLayout:
                id: container
                orientation: "vertical"
                spacing: "1dp"
                size_hint_y: None
                height: self.minimum_height

                Button:
                    text: "1"
                    size_hint: 1, None
                    height: "48dp"
                Button:
                    text: "2"
                    size_hint: 1, None
                    height: "48dp"
                Button:
                    text: "3"
                    size_hint: 1, None
                    height: "48dp"
                Button:
                    text: "4"
                    size_hint: 1, None
                    height: "48dp"
                Button:
                    text: "5"
                    size_hint: 1, None
                    height: "48dp"
                Button:
                    text: "6"
                    size_hint: 1, None
                    height: "48dp"
                Button:
                    text: "7"
                    size_hint: 1, None
                    height: "48dp"
                Button:
                    text: "8"
                    size_hint: 1, None
                    height: "48dp"
                Button:
                    text: "9"
                    size_hint: 1, None
                    height: "48dp"
                Button:
                    text: "10"
                    size_hint: 1, None
                    height: "48dp"
